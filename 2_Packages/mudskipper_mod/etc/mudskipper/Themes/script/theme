GTKP=($HOME/.config/mudskipper/Themes/theme)

if [ ! -f "$GTKP" ]; then
   
     	gsettings set org.gnome.desktop.interface gtk-theme Flat-Plat
     	gsettings set org.gnome.desktop.interface icon-theme shadow
     	gsettings set org.gnome.desktop.background picture-uri 'file:///usr/share/backgrounds/Stripes/stripes1.svg'
     	gsettings set org.gnome.desktop.screensaver picture-uri 'file:///usr/share/backgrounds/Stripes/stripes4.svg'
     	mkdir -p $HOME/.config/mudskipper/Themes/
     	echo GTK Theme enabled > $GTKP
fi


